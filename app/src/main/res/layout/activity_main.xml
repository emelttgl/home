<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    tools:context=".outils.MainActivity">

    <Button
        android:id="@+id/construction"
        android:layout_width="271dp"
        android:layout_height="72dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/construction_du_mod_le"
        android:textColor="#2196F3"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/visualisation"
        android:layout_width="271dp"
        android:layout_height="72dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="436dp"
        android:layout_marginBottom="93dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/visualisation_du_mod_le"
        android:textColor="#2196F3"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home3d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="104dp"
        android:layout_marginBottom="116dp"
        android:shadowColor="#9C27B0"
        android:shadowRadius="50"
        android:text="@string/home3d"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/construction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>