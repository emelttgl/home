<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConstructionActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="1dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:listitem="@layout/item_piece"/>

    <Button
        android:id="@+id/supprimer"
        android:layout_width="127dp"
        android:layout_height="64dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="#2196F3"
        android:text="Supprimer"
        app:layout_constraintStart_toEndOf="@+id/ajouter"
        app:layout_constraintTop_toBottomOf="@+id/home3d" />

    <Button
        android:id="@+id/ajouter"
        android:layout_width="127dp"
        android:layout_height="64dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="35dp"
        android:backgroundTint="#2196F3"
        android:text="Ajouter"
        android:onClick="ajouterPiece"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home3d" />

    <TextView
        android:id="@+id/home3d"
        android:layout_width="108dp"
        android:layout_height="39dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="4dp"
        android:shadowColor="#2196F3"
        android:shadowRadius="50"
        android:text="@string/home3d"
        android:textColor="#2196F3"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>